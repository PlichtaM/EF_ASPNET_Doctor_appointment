@model Projekt.Models.Appointment

<h1>Umów wizytę</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Specjalizacja:</label>
        <select asp-for="Specialization" class="form-control">
            <option value="Pediatrics">Pediatra</option>
            <option value="Dermatology">Dermatolog</option>
            <!--  inne specjalizacje lekarzy -->
        </select>
    </div>
    <div class="form-group">
        <label>Data:</label>
        <input type="date" asp-for="Date" class="form-control" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" max="@DateTime.Now.AddYears(1).ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label>Termin:</label>
        <select asp-for="DoctorId" class="form-control">
            @foreach (var doctor in ViewBag.Doctors)
            {
                <option value="@doctor.Id">@doctor.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Uwagi:</label>
        <input type="text" asp-for="Notes" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Umów wizytę</button>
</form>
